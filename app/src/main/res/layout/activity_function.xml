<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_function"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus1.nbatest.activities.FunctionActivity"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="0.05dp"
            android:layout_height="40dp">

            <SearchView
                android:id="@+id/search_view"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:layout_toLeftOf="@+id/search_button"
                android:layout_weight="6"
                android:contextClickable="true"
                android:background="@android:color/black">

            </SearchView>

            <Button
                android:text="@string/search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_search"
                android:layout_weight="1.6"
                android:background="@android:color/background_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.05dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_height="match_parent"
                app:srcCompat="@drawable/player3"
                android:id="@+id/button_player"
                android:layout_width="0dp"
                android:background="@android:color/black"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/team1"
                android:id="@+id/button_team"
                android:background="@android:color/black"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/coach2"
                android:id="@+id/button_coach"
                android:background="@android:color/black"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/arena1"
                android:id="@+id/button_arena"
                android:layout_weight="1"
                android:background="@android:color/black" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
