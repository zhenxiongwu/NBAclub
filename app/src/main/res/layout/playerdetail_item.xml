<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title6"
        android:id="@+id/imageView"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="-3dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/galleryItemBackground">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:text="球员"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@android:color/background_light" />

            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/TextView_playerDetail"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@android:color/background_light" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:text="赛季"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="4dp" />

            <TextView
                android:text="球队"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:textColor="@android:color/background_light" />

            <Button
                android:text="出场/统计"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:id="@+id/Button_playerDetail_games"
                android:background="@android:color/transparent"
                android:layout_weight="1" />

            <Button
                android:text="得分/统计"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:id="@+id/Button_playerDetail_points"
                android:background="@android:color/transparent"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ListView_playerDetail" />
        </TableRow>

    </TableLayout>

</LinearLayout>